<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.youxianji.dao.IPayPasswordDao">
	<update id="updateUserPayPassword" parameterType="java.lang.String">
		update userinfo
	       set paypass = #{1} 
	    where  userid = #{0} and telephone = #{2}
	</update>
</mapper>